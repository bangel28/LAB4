<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="102dp">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="532dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="151dp"
                android:layout_height="184dp"
                android:onClick="SetTeamIcon"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_row="0"
                app:layout_rowSpan="1"
                tools:srcCompat="@drawable/telechargement" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="137dp"
                android:layout_height="183dp"
                android:onClick="SetTeamIcon"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_row="0"
                app:layout_rowSpan="1"
                tools:srcCompat="@drawable/telecharge" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="120dp"
                android:layout_height="183dp"
                android:onClick="SetTeamIcon"
                app:layout_column="2"
                app:layout_columnSpan="1"
                app:layout_row="0"
                app:layout_rowSpan="1"
                tools:srcCompat="@drawable/telech" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="151dp"
                android:layout_height="128dp"
                android:onClick="SetTeamIcon"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_row="1"
                app:layout_rowSpan="1"
                tools:srcCompat="@drawable/imag" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="139dp"
                android:layout_height="128dp"
                android:onClick="SetTeamIcon"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_row="1"
                app:layout_rowSpan="1"
                tools:srcCompat="@drawable/image" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="122dp"
                android:layout_height="127dp"
                android:onClick="SetTeamIcon"
                app:layout_column="2"
                app:layout_columnSpan="1"
                app:layout_row="1"
                app:layout_rowSpan="1"
                tools:srcCompat="@drawable/images" />
        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Load from phone"
            app:backgroundTint="#EF6C00" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>